public class library {
    public static void main(String[] args) {

        Book b1 = new Book ("The Great Gatsby", "Tike Myson", 350);
        Book b2 = new Book ("The Bomboclaut", "Rick Owens", 500);

        b1.print();
        b2.print(); 
    }
}
class Book {
    // Task 1: Add three attributes: title, author, and numberOfPages.
    private String title;
    private String author;
    private int numberOfPages;


    public Book(String title, String author, int numberOfPages) {
        // Task 2: Initialize the attributes inside this constructor.
        title = title;
        author = author;
        numberOfPages = numberOfPages;
    }

    public void print() {
        System.out.println("Title: " + title);
        System.out.println("Author: " + author);
        System.out.println("Number of pages: "+numberOfPages);
    }


}
